{% extends 'base.html.twig' %}

{% block title %}Show product{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>{{ product.code }} - {{ product.name }}</h2>
                <a href="{{ path('products_edit', {'id':product.id}) }}" class="btn btn-sm btn-warning">Edit</a>
            </div>
            <div class="card mb-0">
                <div class="card-body">
                    <p>Category: {{ product.category.name }}</p>
                    <p>Brand: {{ product.brand }}</p>
                    <p>Price: $ {{ product.price|number_format(2, ',', '.') }}</p>
                    <p>Description: {{ product.description }}</p>
                    <p>Created at: {{ product.createdAt|date('d/m/Y H:i:s') }}</p>
                    <p>Updated at: {{ product.updatedAt|date('d/m/Y H:i:s') }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('products_index') }}" class="btn btn-sm btn-primary">Go Back</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
